<div class="container">
  <div class="login-form">
   <%= form_with scope: :session, local: true do |f|%>
      <div class="form-group">
          <p>メールアドレス</p>
          <%= f.text_field :email, class: "form-control", id: "session_email" %>
      </div>
      <div class="form-group">
          <p>パスワード<p>
          <%= f.password_field :password, class: "form-control" , id: "session_password" %>
      </div>
      <div class="form-group">
          <p>パスワード(確認)<p>
          <%= f.password_field :password_confirmation, class: "form-control" , id: "session_password" %>
      </div>
      <div class="text-center">
          <%= f.submit "ログイン", class: "btn btn-primary signup-btn"%>
      </div>
     <%end%>
   </div>
</div>

