<div class="container">
<br>
<div class="row">
    <div class="col-md-12">
        <table class = "table table-hover">
            <thead class="thead-light">
               
                <tr>
                    <th colspan = "3">いいねしたユーザー</th>
                    
                </tr>
            </thead>
            <tbody>
               
                 <% @post.liked_users.each do |user|%>        
                <tr>                
                     <th width = "100"><%=image_tag user.image.thumb100.url if user.image? %></th>
                     <th width = "100"> <%= link_to user.name, user_path(user) %>
                      <th width = "900"> ジャンル：<%=user.genre %><br><%= user.introduce %></th>

                 </tr>
                  <% end %>

                
            </tbody>
        </table>
    </div>
</div>
</div>

