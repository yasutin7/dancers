<!DOCTYPE html>
<html>
  <head>
    <title>Dancewith</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
 
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
  <%if current_user%>
  <a class="navbar-brand" href="">Dancewith</a>
  <%else%>
  <a class="navbar-brand" href="/top">Dancewith</a>
  <% end %>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
    <ul class="navbar-nav">
        
      <% if @current_user %>
      <% a = @current_user.id.to_i %>
      <li class="nav-item ">
        <a class="nav-link" href="/">投稿一覧 </a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/posts/new">新規投稿</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/users">ダンサー一覧</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/users/<%= current_user.id %>">マイページ</a>
         
      </li>
     
      <li class="nav-item">
           <a class="nav-link" href="/logout" data-method="delete">ログアウト</a>
      </li>
      <%else%>
      <li class="nav-item">
        <a class="nav-link" href="/about">Dancewithとは</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/signup">新規登録</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" href="/login">ログイン</a>
      </li>
     
      <%end%>
      
    </ul>
    
  </div>
</nav>
<div class="container">
      <% if flash[:notice]%>
      <p class="text-success"><%=flash[:notice]%></p>
      <%end%>
      
      <% if flash[:alert]%>
        <p class="text-danger"><%=flash[:alert]%></p>
      <%end%>
  </div>

    <%= yield %>


  </body>
</html>

