        熊本県: "熊本県" ,
        大分県: "大分県" ,
        宮崎県: "宮崎県" ,
        鹿児島県: "鹿児島県",
        沖縄県: "沖縄県"
        },{prompt: '選択してください'}%>
        </div>

        <%= f.submit "検索", class: 'users-search-btn' %> 
        <%= link_to 'リセット', users_path, class: 'users-search-reset'%>
      <% end %>
     </div>

        <div class="clearfix">
        <% @users.each do |user|%>
            <div class="card float-left ">
            <div class="user-genre">
              <h1><%= user.genre%></h1>
            </div>
            <%if user.image? %>
                <%=image_tag user.image.thumb.url, class: "card-img-top" %>
            <%else%>
                <%= image_tag 'default.jpg', class: "card-img-top" %>
            <%end%>
                <div class="card-body user-card-body">
                    <h4 class="card-title"><%= link_to user.name, user_path(user) %></h4>
                    <p class="card-text">
                    <%= user.introduce %>
                    </p>
                    <%= link_to user_path(user), class: "btn btn-primary" do%>
                    詳しく見る
                    <% end %>
                </div>
            </div>
         <%end%>
        </div>
</div>


