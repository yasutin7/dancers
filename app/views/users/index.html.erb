    <div class="users-index-title">
      <i class="fas fa-check fa-1x">ダンサー一覧から探す</i>
    </div>
    <div class="seach-form">
     <%= search_form_for @q  do |f| %>
       <div class="genre-form">
        <%= f.label :genre, "ジャンル" %>
