<div class="container">
<br>
<br>
<div>
<%= link_to '投稿する', new_post_path %>
</div>
<div class="row">
    <div class="col-md-12">
        <table class = "table table-hover">
            <thead class="thead-light">
                <tr> 
                    <th>投稿一覧</th>
                    <th></th>
                   
                </tr>
            </thead>
            <tbody>
                <% @posts.each do |post|%>
                 <tr>                    
                     <th><%=image_tag post.user.image.thumb50.url if post.user.image? %>
                      　　　<%=link_to post.user.name , user_path(post.user)%></th>
                    <th><%=link_to post.content,post_path(post)%></th>

                 </tr>
                 <%end%>
            </tbody>
        </table>


       
    </div>
</div>
</div>